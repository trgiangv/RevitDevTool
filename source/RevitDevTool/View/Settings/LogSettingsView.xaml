<ui:ContentDialog
    x:Class="RevitDevTool.View.Settings.LogSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:config="clr-namespace:RevitDevTool.Models.Config"
    xmlns:converter="clr-namespace:RevitDevTool.View.Converter"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:settings="clr-namespace:RevitDevTool.ViewModel.Settings"
    xmlns:settingsDialog="clr-namespace:RevitDevTool.View.Settings"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:ui="http://revitdevtool.com/xaml"
    Title="Log Settings"
    d:DataContext="{d:DesignInstance settings:LogSettingsViewModel}"
    d:DesignHeight="600"
    d:DesignWidth="600"
    CloseButtonText="Cancel"
    DefaultButton="Primary"
    PrimaryButtonText="Save"
    mc:Ignorable="d">

    <ui:ContentDialog.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- <ui:ThemesDictionary Theme="Light" /> -->
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>

            <!--  ReSharper disable once Xaml.StaticResourceNotResolved  -->
            <Style
                BasedOn="{StaticResource DefaultContentDialogStyle}"
                TargetType="{x:Type settingsDialog:LogSettingsView}" />

            <converter:BoolToVisibilityConverter x:Key="BoolToVisibility" />

            <ObjectDataProvider
                x:Key="LogSaveFormats"
                MethodName="GetValues"
                ObjectType="{x:Type sys:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="config:LogSaveFormat" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>

            <ObjectDataProvider
                x:Key="LogTimeIntervals"
                MethodName="GetValues"
                ObjectType="{x:Type sys:Enum}">
                <ObjectDataProvider.MethodParameters>
                    <x:Type TypeName="config:LogTimeInterval" />
                </ObjectDataProvider.MethodParameters>
            </ObjectDataProvider>
        </ResourceDictionary>
    </ui:ContentDialog.Resources>

    <StackPanel Margin="0">
        <!--  Save Format  -->
        <ui:CardControl
            Margin="0,4,0,0"
            Icon="{ui:SymbolIcon DocumentDatabase24}">
            <ui:CardControl.Header>
                <StackPanel>
                    <ui:TextBlock Text="Save Format" />
                    <ui:TextBlock
                        Appearance="Secondary"
                        FontTypography="Caption"
                        Text="Select output format for log entries"
                        TextTrimming="CharacterEllipsis" />
                </StackPanel>
            </ui:CardControl.Header>
            <ComboBox
                MinWidth="120"
                ItemsSource="{Binding Source={StaticResource LogSaveFormats}}"
                SelectedItem="{Binding SaveFormat}" />
        </ui:CardControl>

        <!--  Include StackTrace  -->
        <ui:CardControl
            Margin="0,4,0,0"
            Icon="{ui:SymbolIcon TextBulletListTree24}">
            <ui:CardControl.Header>
                <StackPanel>
                    <ui:TextBlock Text="Include Stack Trace" />
                    <ui:TextBlock
                        Appearance="Secondary"
                        FontTypography="Caption"
                        Text="Include class name and method in log entries"
                        TextTrimming="CharacterEllipsis" />
                </StackPanel>
            </ui:CardControl.Header>
            <ui:ToggleSwitch IsChecked="{Binding IncludeStackTrace}" />
        </ui:CardControl>

        <!--  Multiple Files Option  -->
        <ui:CardControl
            Margin="0,4,0,0"
            Icon="{ui:SymbolIcon DocumentMultiple24}">
            <ui:CardControl.Header>
                <StackPanel>
                    <ui:TextBlock Text="Multiple Files" />
                    <ui:TextBlock
                        Appearance="Secondary"
                        FontTypography="Caption"
                        Text="Split log entries into multiple files by time interval"
                        TextTrimming="CharacterEllipsis" />
                </StackPanel>
            </ui:CardControl.Header>
            <ui:ToggleSwitch IsChecked="{Binding UseMultipleFiles}" />
        </ui:CardControl>

        <!--  Time Interval (visible when Multiple Files is checked)  -->
        <ui:CardControl
            Margin="0,4,0,0"
            Icon="{ui:SymbolIcon Clock24}"
            Visibility="{Binding UseMultipleFiles, Converter={StaticResource BoolToVisibility}}">
            <ui:CardControl.Header>
                <StackPanel>
                    <ui:TextBlock Text="Time Interval" />
                    <ui:TextBlock
                        Appearance="Secondary"
                        FontTypography="Caption"
                        Text="Create new file every"
                        TextTrimming="CharacterEllipsis" />
                </StackPanel>
            </ui:CardControl.Header>
            <ComboBox
                MinWidth="120"
                ItemsSource="{Binding Source={StaticResource LogTimeIntervals}}"
                SelectedItem="{Binding TimeInterval}" />
        </ui:CardControl>

        <!--  File Path (visible when Multiple Files is NOT checked)  -->
        <ui:CardControl
            Margin="0,4,0,0"
            Icon="{ui:SymbolIcon Document24}"
            Visibility="{Binding UseMultipleFiles, Converter={StaticResource BoolToVisibility}, ConverterParameter=Inverse}">
            <ui:CardControl.Header>
                <StackPanel>
                    <ui:TextBlock Text="Log File" />
                    <ui:TextBlock
                        Appearance="Secondary"
                        FontTypography="Caption"
                        Text="{Binding FilePath}"
                        TextTrimming="CharacterEllipsis"
                        ToolTip="{Binding FilePath}" />
                </StackPanel>
            </ui:CardControl.Header>
            <ui:Button
                Command="{Binding BrowseFileCommand}"
                Content="Browse..."
                Icon="{ui:SymbolIcon FolderOpen24}" />
        </ui:CardControl>

        <!--  Folder Path (visible when Multiple Files IS checked)  -->
        <ui:CardControl
            Margin="0,4,0,0"
            Icon="{ui:SymbolIcon Folder24}"
            Visibility="{Binding UseMultipleFiles, Converter={StaticResource BoolToVisibility}}">
            <ui:CardControl.Header>
                <StackPanel>
                    <ui:TextBlock Text="Log Folder" />
                    <ui:TextBlock
                        Appearance="Secondary"
                        FontTypography="Caption"
                        Text="{Binding FolderPath}"
                        TextTrimming="CharacterEllipsis"
                        ToolTip="{Binding FolderPath}" />
                </StackPanel>
            </ui:CardControl.Header>
            <ui:Button
                Command="{Binding BrowseFolderCommand}"
                Content="Browse..."
                Icon="{ui:SymbolIcon FolderOpen24}" />
        </ui:CardControl>
    </StackPanel>
</ui:ContentDialog>
