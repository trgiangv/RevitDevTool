<Page
    x:Class="RevitDevTool.View.Settings.BoundingBoxVisualizationSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:colorPicker="clr-namespace:ColorPicker;assembly=ColorPicker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:settings="clr-namespace:RevitDevTool.ViewModel.Settings"
    d:DataContext="{d:DesignInstance settings:BoundingBoxVisualizationViewModel}"
    d:DesignHeight="540"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <StackPanel Margin="20">
        <DockPanel>
            <Grid
                Width="150"
                Height="32"
                DockPanel.Dock="Right">
                <colorPicker:PortableColorPicker
                    SelectedColor="{Binding SurfaceColor, Mode=TwoWay, Delay=10}"
                    ShowAlpha="False"
                    ShowFractionalPart="False"
                    SmallChange="5"
                    Style="{DynamicResource DefaultColorPickerStyle}"
                    UseHintColor="False" />
            </Grid>
            <CheckBox
                Content="Surface"
                IsChecked="{Binding ShowSurface}"
                TabIndex="0" />
        </DockPanel>
        <StackPanel Margin="0,8,0,0">
            <DockPanel>
                <TextBlock Text="Transparency" />
                <TextBlock
                    HorizontalAlignment="Right"
                    Text="{Binding Transparency, StringFormat={}{0} %, Mode=OneWay, FallbackValue='12 %'}" />
            </DockPanel>
            <Slider
                Margin="0,4,0,0"
                IsSnapToTickEnabled="True"
                Maximum="100"
                Minimum="0"
                TickFrequency="10"
                TickPlacement="BottomRight"
                Value="{Binding Transparency}" />
        </StackPanel>
        <DockPanel Margin="0,8,0,0">
            <Grid
                Width="150"
                Height="32"
                DockPanel.Dock="Right">
                <colorPicker:PortableColorPicker
                    SelectedColor="{Binding EdgeColor, Mode=TwoWay, Delay=10}"
                    ShowAlpha="False"
                    ShowFractionalPart="False"
                    SmallChange="5"
                    Style="{DynamicResource DefaultColorPickerStyle}"
                    UseHintColor="False" />
            </Grid>
            <CheckBox
                Content="Edges"
                IsChecked="{Binding ShowEdge}"
                TabIndex="1" />
        </DockPanel>
        <DockPanel Margin="0,8,0,0">
            <Grid
                Width="150"
                Height="32"
                DockPanel.Dock="Right">
                <colorPicker:PortableColorPicker
                    SelectedColor="{Binding AxisColor, Mode=TwoWay, Delay=10}"
                    ShowAlpha="False"
                    ShowFractionalPart="False"
                    SmallChange="5"
                    Style="{DynamicResource DefaultColorPickerStyle}"
                    UseHintColor="False" />
            </Grid>
            <CheckBox
                Content="Axis"
                IsChecked="{Binding ShowAxis}"
                TabIndex="2" />
        </DockPanel>
    </StackPanel>
</Page>