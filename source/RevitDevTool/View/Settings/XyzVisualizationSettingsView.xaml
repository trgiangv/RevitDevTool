<Page
    x:Class="RevitDevTool.View.Settings.XyzVisualizationSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:colorPicker="clr-namespace:ColorPicker;assembly=ColorPicker"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:settings="clr-namespace:RevitDevTool.ViewModel.Settings"
    d:DataContext="{d:DesignInstance settings:XyzVisualizationViewModel}"
    d:DesignHeight="540"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary Source="pack://application:,,,/ColorPicker;component/Styles/DefaultColorPickerStyle.xaml" />
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <StackPanel Margin="20">
        <CheckBox
            Content="Planes"
            IsChecked="{Binding ShowPlane}"
            TabIndex="0" />
        <StackPanel Margin="0,8,0,0">
            <DockPanel>
                <TextBlock Text="Transparency" />
                <TextBlock
                    HorizontalAlignment="Right"
                    Text="{Binding Transparency, StringFormat={}{0} %, Mode=OneWay, FallbackValue='12 %'}" />
            </DockPanel>
            <Slider
                Margin="0,4,0,0"
                IsSnapToTickEnabled="True"
                Maximum="100"
                Minimum="0"
                TickFrequency="10"
                TickPlacement="BottomRight"
                Value="{Binding Transparency}" />
        </StackPanel>
        <StackPanel Margin="0,8,0,0">
            <DockPanel>
                <TextBlock Text="Size" />
                <TextBlock
                    HorizontalAlignment="Right"
                    Text="{Binding AxisLength, StringFormat={}{0:F0} inch, Mode=OneWay, FallbackValue='12 inch'}" />
            </DockPanel>
            <Slider
                Margin="0,4,0,0"
                IsSnapToTickEnabled="True"
                Maximum="24"
                Minimum="{Binding MinAxisLength, Mode=OneTime}"
                TickFrequency="2"
                TickPlacement="BottomRight"
                Value="{Binding AxisLength}" />
        </StackPanel>
        <DockPanel Margin="0,8,0,0">
            <Grid
                Width="300"
                Height="32"
                DockPanel.Dock="Right">
                <colorPicker:PortableColorPicker
                    SelectedColor="{Binding XColor, Mode=TwoWay, Delay=10}"
                    ShowAlpha="False"
                    ShowFractionalPart="False"
                    SmallChange="5"
                    Style="{StaticResource DefaultColorPickerStyle}"
                    UseHintColor="False" />
            </Grid>
            <CheckBox
                Content="X axis"
                IsChecked="{Binding ShowXAxis}"
                TabIndex="1" />
        </DockPanel>
        <DockPanel Margin="0,8,0,0">
            <Grid
                Width="300"
                Height="32"
                DockPanel.Dock="Right">
                <colorPicker:PortableColorPicker
                    SelectedColor="{Binding YColor, Mode=TwoWay, Delay=10}"
                    ShowAlpha="False"
                    ShowFractionalPart="False"
                    SmallChange="5"
                    Style="{StaticResource DefaultColorPickerStyle}"
                    UseHintColor="False" />
            </Grid>
            <CheckBox
                Content="Y axis"
                IsChecked="{Binding ShowYAxis}"
                TabIndex="2" />
        </DockPanel>
        <DockPanel Margin="0,8,0,0">
            <Grid
                Width="300"
                Height="32"
                DockPanel.Dock="Right">
                <colorPicker:PortableColorPicker
                    SelectedColor="{Binding ZColor, Mode=TwoWay, Delay=10}"
                    ShowAlpha="False"
                    ShowFractionalPart="False"
                    SmallChange="5"
                    Style="{StaticResource DefaultColorPickerStyle}"
                    UseHintColor="False" />
            </Grid>
            <CheckBox
                Content="Z axis"
                IsChecked="{Binding ShowZAxis}"
                TabIndex="3" />
        </DockPanel>
    </StackPanel>
</Page>