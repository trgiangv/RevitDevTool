<Page
    x:Class="RevitDevTool.View.Settings.PolylineVisualizationSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:RevitDevTool.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:settings="clr-namespace:RevitDevTool.ViewModel.Settings"
    xmlns:ui="http://revitdevtool.com/xaml"
    d:DataContext="{d:DesignInstance settings:PolylineVisualizationViewModel}"
    d:DesignHeight="540"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <StackPanel Margin="20">
        <DockPanel>
            <ui:SymbolIcon
                Margin="8,0,0,0"
                DockPanel.Dock="Right"
                FontSize="20"
                Symbol="Eyedropper20" />
            <controls:ColorPickerControl
                DockPanel.Dock="Right"
                SelectedColor="{Binding SurfaceColor}" />
            <CheckBox
                Content="Surface"
                IsChecked="{Binding ShowSurface}"
                TabIndex="0" />
        </DockPanel>
        <StackPanel Margin="0,8,0,0">
            <DockPanel>
                <TextBlock Text="Diameter" />
                <TextBlock
                    HorizontalAlignment="Right"
                    Text="{Binding Diameter, StringFormat={}{0:F1} inch, FallbackValue='12 inch'}" />
            </DockPanel>
            <Slider
                Margin="0,4,0,0"
                IsSnapToTickEnabled="True"
                Maximum="6"
                Minimum="{Binding MinThickness, Mode=OneTime}"
                TickFrequency="0.2"
                TickPlacement="BottomRight"
                Value="{Binding Diameter}" />
        </StackPanel>
        <StackPanel Margin="0,8,0,0">
            <DockPanel>
                <TextBlock Text="Transparency" />
                <TextBlock
                    HorizontalAlignment="Right"
                    Text="{Binding Transparency, StringFormat={}{0} %, FallbackValue='12 %'}" />
            </DockPanel>
            <Slider
                Margin="0,4,0,0"
                IsSnapToTickEnabled="True"
                Maximum="100"
                Minimum="0"
                TickFrequency="10"
                TickPlacement="BottomRight"
                Value="{Binding Transparency}" />
        </StackPanel>
        <DockPanel Margin="0,8,0,0">
            <ui:SymbolIcon
                Margin="8,0,0,0"
                DockPanel.Dock="Right"
                FontSize="20"
                Symbol="Eyedropper20" />
            <controls:ColorPickerControl
                DockPanel.Dock="Right"
                SelectedColor="{Binding CurveColor}" />
            <CheckBox
                Content="Polyline"
                IsChecked="{Binding ShowCurve}"
                TabIndex="1" />
        </DockPanel>
        <DockPanel Margin="0,8,0,0">
            <ui:SymbolIcon
                Margin="8,0,0,0"
                DockPanel.Dock="Right"
                FontSize="20"
                Symbol="Eyedropper20" />
            <controls:ColorPickerControl
                DockPanel.Dock="Right"
                SelectedColor="{Binding DirectionColor}" />
            <CheckBox
                Content="Direction"
                IsChecked="{Binding ShowDirection}"
                TabIndex="2" />
        </DockPanel>
    </StackPanel>
</Page>