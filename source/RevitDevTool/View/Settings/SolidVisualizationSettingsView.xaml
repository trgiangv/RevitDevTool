<Page
    x:Class="RevitDevTool.View.Settings.SolidVisualizationSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:RevitDevTool.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:settings="clr-namespace:RevitDevTool.ViewModel.Settings"
    xmlns:ui="http://revitdevtool.com/xaml"
    d:DataContext="{d:DesignInstance settings:SolidVisualizationViewModel}"
    d:DesignHeight="540"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <StackPanel Margin="20">
        <DockPanel>
            <ui:SymbolIcon
                Margin="8,0,0,0"
                DockPanel.Dock="Right"
                FontSize="20"
                Symbol="Eyedropper20" />
            <controls:ColorPickerControl
                DockPanel.Dock="Right"
                SelectedColor="{Binding FaceColor}" />
            <CheckBox
                Content="Faces"
                IsChecked="{Binding ShowFace}"
                TabIndex="0" />
        </DockPanel>
        <StackPanel Margin="0,8,0,0">
            <DockPanel>
                <TextBlock Text="Transparency" />
                <TextBlock
                    HorizontalAlignment="Right"
                    Text="{Binding Transparency, StringFormat={}{0} %, FallbackValue='12 %'}" />
            </DockPanel>
            <Slider
                Margin="0,4,0,0"
                IsSnapToTickEnabled="True"
                Maximum="100"
                Minimum="0"
                TickFrequency="10"
                TickPlacement="BottomRight"
                Value="{Binding Transparency}" />
        </StackPanel>
        <StackPanel Margin="0,8,0,0">
            <DockPanel>
                <TextBlock Text="Scale" />
                <TextBlock
                    HorizontalAlignment="Right"
                    Text="{Binding Scale, StringFormat={}{0} %, FallbackValue='12 %'}" />
            </DockPanel>
            <Slider
                Margin="0,4,0,0"
                IsSnapToTickEnabled="True"
                Maximum="400"
                Minimum="100"
                TickFrequency="25"
                TickPlacement="BottomRight"
                Value="{Binding Scale}" />
        </StackPanel>
        <DockPanel Margin="0,8,0,0">
            <ui:SymbolIcon
                Margin="8,0,0,0"
                DockPanel.Dock="Right"
                FontSize="20"
                Symbol="Eyedropper20" />
            <controls:ColorPickerControl
                DockPanel.Dock="Right"
                SelectedColor="{Binding EdgeColor}" />
            <CheckBox
                Content="Edges"
                IsChecked="{Binding ShowEdge}"
                TabIndex="1" />
        </DockPanel>
    </StackPanel>
</Page>