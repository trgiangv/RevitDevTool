<UserControl
    x:Class="RevitDevTool.View.Settings.Visualization.SolidVisualizationSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:design="clr-namespace:RevitDevTool.Theme.Design"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:visualization="clr-namespace:RevitDevTool.ViewModel.Settings.Visualization"
    d:DataContext="{d:DesignInstance visualization:SolidVisualizationViewModel}"
    d:DesignHeight="540"
    d:DesignWidth="600"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/RevitDevTool;component/Theme/Theme.xaml" />
                <design:IntellisenseResources Source="/RevitDevTool;component/Theme/Design/DesignTimeResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer
        HorizontalScrollBarVisibility="Disabled"
        VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!--  Faces  -->
            <GroupBox
                Margin="0,0,0,8"
                Header="Faces">
                <StackPanel Margin="8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <CheckBox
                            VerticalAlignment="Center"
                            Content="Show Faces"
                            IsChecked="{Binding ShowFace}" />
                        <mah:ColorPicker
                            Grid.Column="1"
                            Width="{StaticResource ColorPickerWidth}"
                            SelectedColor="{Binding FaceColor}" />
                    </Grid>
                    <StackPanel Margin="0,12,0,0">
                        <DockPanel>
                            <TextBlock Text="Transparency" />
                            <TextBlock
                                HorizontalAlignment="Right"
                                Text="{Binding Transparency, StringFormat={}{0} %}" />
                        </DockPanel>
                        <Slider
                            Margin="0,4,0,0"
                            IsSnapToTickEnabled="True"
                            Maximum="100"
                            Minimum="0"
                            TickFrequency="10"
                            TickPlacement="BottomRight"
                            Value="{Binding Transparency}" />
                    </StackPanel>
                    <StackPanel Margin="0,12,0,0">
                        <DockPanel>
                            <TextBlock Text="Scale" />
                            <TextBlock
                                HorizontalAlignment="Right"
                                Text="{Binding Scale, StringFormat={}{0} %}" />
                        </DockPanel>
                        <Slider
                            Margin="0,4,0,0"
                            IsSnapToTickEnabled="True"
                            Maximum="400"
                            Minimum="100"
                            TickFrequency="25"
                            TickPlacement="BottomRight"
                            Value="{Binding Scale}" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <!--  Edges  -->
            <GroupBox
                Margin="0,0,0,8"
                Header="Edges">
                <Grid Margin="8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <CheckBox
                        VerticalAlignment="Center"
                        Content="Show Edges"
                        IsChecked="{Binding ShowEdge}" />
                    <mah:ColorPicker
                        Grid.Column="1"
                        Width="{StaticResource ColorPickerWidth}"
                        SelectedColor="{Binding EdgeColor}" />
                </Grid>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>
