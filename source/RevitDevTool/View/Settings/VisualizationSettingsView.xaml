<UserControl
    x:Class="RevitDevTool.View.Settings.VisualizationSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://revitdevtool.com/xaml"
    xmlns:visualization="clr-namespace:RevitDevTool.View.Settings.Visualization"
    d:DesignHeight="630"
    d:DesignWidth="600"
    Margin="0 5 0 0"
    Background="{DynamicResource SolidBackgroundFillColorBaseBrush}"
    mc:Ignorable="d">

    <Grid>
        <ui:NavigationView
            x:Name="RootNavigation"
            IsBackButtonVisible="Collapsed"
            IsPaneOpen="False"
            OpenPaneLength="150"
            PaneDisplayMode="Left">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem
                    Content="BoundingBox"
                    Icon="{ui:SymbolIcon Box24}"
                    TargetPageType="{x:Type visualization:BoundingBoxVisualizationSettingsView}" />
                <ui:NavigationViewItem
                    Content="Face"
                    Icon="{ui:SymbolIcon RectangleLandscape24}"
                    TargetPageType="{x:Type visualization:FaceVisualizationSettingsView}" />
                <ui:NavigationViewItem
                    Content="Mesh"
                    Icon="{ui:SymbolIcon ShapeExclude24}"
                    TargetPageType="{x:Type visualization:MeshVisualizationSettingsView}" />
                <ui:NavigationViewItem
                    Content="Curve"
                    Icon="{ui:SymbolIcon Line24}"
                    TargetPageType="{x:Type visualization:PolylineVisualizationSettingsView}" />
                <ui:NavigationViewItem
                    Content="Solid"
                    Icon="{ui:SymbolIcon Box24, Filled=True}"
                    TargetPageType="{x:Type visualization:SolidVisualizationSettingsView}" />
                <ui:NavigationViewItem
                    Content="Point"
                    Icon="{ui:SymbolIcon PointScan24}"
                    TargetPageType="{x:Type visualization:XyzVisualizationSettingsView}" />
            </ui:NavigationView.MenuItems>
        </ui:NavigationView>
    </Grid>
</UserControl>
