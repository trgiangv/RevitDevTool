<ui:FluentWindow
    x:Class="RevitDevTool.View.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:settings="clr-namespace:RevitDevTool.View.Settings"
    xmlns:ui="http://revitdevtool.com/xaml"
    Title="Settings"
    Width="650"
    Height="550"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">

    <!-- <FrameworkElement.Resources> -->
    <!--     <ResourceDictionary> -->
    <!--         <ResourceDictionary.MergedDictionaries> -->
    <!--             <ui:ThemesDictionary Theme="Light" /> -->
    <!--             <ui:ControlsDictionary /> -->
    <!--         </ResourceDictionary.MergedDictionaries> -->
    <!--     </ResourceDictionary> -->
    <!-- </FrameworkElement.Resources> -->

    <Grid>
        <ui:TitleBar
            x:Name="TitleBar"
            Title="Settings"
            Margin="42,0,0,0"
            ShowMaximize="False"
            ShowMinimize="False" />
        <ui:NavigationView
            x:Name="RootNavigation"
            BreadcrumbBar="{Binding ElementName=BreadcrumbBar}"
            IsBackButtonVisible="Collapsed"
            IsPaneOpen="False"
            OpenPaneLength="160"
            PaneDisplayMode="Left"
            TitleBar="{Binding ElementName=TitleBar, Mode=OneWay}">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem
                    Content="BoundingBox"
                    Icon="{ui:SymbolIcon Box24}"
                    TargetPageType="{x:Type settings:BoundingBoxVisualizationSettingsView}" />
                <ui:NavigationViewItem
                    Content="Face"
                    Icon="{ui:SymbolIcon RectangleLandscape24}"
                    TargetPageType="{x:Type settings:FaceVisualizationSettingsView}" />
                <ui:NavigationViewItem
                    Content="Mesh"
                    Icon="{ui:SymbolIcon ShapeExclude24}"
                    TargetPageType="{x:Type settings:MeshVisualizationSettingsView}" />
                <ui:NavigationViewItem
                    Content="Curve"
                    Icon="{ui:SymbolIcon Line24}"
                    TargetPageType="{x:Type settings:PolylineVisualizationSettingsView}" />
                <ui:NavigationViewItem
                    Content="Solid"
                    Icon="{ui:SymbolIcon Box24,
                                         Filled=True}"
                    TargetPageType="{x:Type settings:SolidVisualizationSettingsView}" />
                <ui:NavigationViewItem
                    Content="Point"
                    Icon="{ui:SymbolIcon PointScan24}"
                    TargetPageType="{x:Type settings:XyzVisualizationSettingsView}" />
            </ui:NavigationView.MenuItems>
            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem
                    Content="General"
                    Icon="{ui:SymbolIcon Settings24}"
                    TargetPageType="{x:Type settings:GeneralSettingsView}" />
            </ui:NavigationView.FooterMenuItems>
            <ui:NavigationView.Header>
                <ui:BreadcrumbBar
                    x:Name="BreadcrumbBar"
                    Margin="12,10,0,0">
                    <ui:BreadcrumbBar.ItemTemplate>
                        <DataTemplate DataType="{x:Type ui:NavigationViewBreadcrumbItem}">
                            <ui:TextBlock
                                FontTypography="Subtitle"
                                Text="{Binding Content}" />
                        </DataTemplate>
                    </ui:BreadcrumbBar.ItemTemplate>
                </ui:BreadcrumbBar>
            </ui:NavigationView.Header>
        </ui:NavigationView>
        <ContentPresenter x:Name="RootContentDialogPresenter" />
    </Grid>
</ui:FluentWindow>
